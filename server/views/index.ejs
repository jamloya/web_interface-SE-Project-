<%- include ('partials/header') -%>
<title>
    Login
</title>

<body>
    
    <h3 class="text-center"><%= info_msg%></h3>
    <div class="flex justify-center  flex-wrap align-middle mt-16">
    <div class="bg-white shadow-md w-1/4 rounded px-8 pt-6 pb-8 mb-4 flex flex-col  ">

        <div class="mb-4 text-center w-full ">
            <h2 >LOGIN</h2>
        </div>

        <form action="/login" method="post">
        <div class="mb-4">
          <label class="block text-grey-darker text-sm font-bold mb-2" for="username">
            Email
          </label>
          <input class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" id="username" name="email" type="text" placeholder="email">
        </div>
        <div class="mb-6">
          <label class="block text-grey-darker text-sm font-bold mb-2" for="password">
            Password
          </label>
          <input class="shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3" name="password" id="password" type="password" placeholder="******************">
          <p class="text-red text-xs italic">Please choose a password.</p>
        </div>
        <p class="px-4 py-4 text-center"><%= error_msg %></p>
        <div class="flex items-center justify-center">
          <button class="bg-purple-600 px-3 py-2 rounded" type="submit">
            Sign In
          </button>
        </div>
    </form>
    </div>
</div>
</body>
<%- include ('partials/footer') -%>
</html>